# ============================================================
# Kalshi Trading Bot Configuration
# ============================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!
# ============================================================

# --- Kalshi API Credentials ---
KALSHI_API_KEY=your-api-key-id-here
KALSHI_PRIVATE_KEY_PATH=./kalshi-private-key.pem

# Environment: "demo" or "prod"
# ALWAYS start with demo!
KALSHI_ENV=demo

# --- Trading Mode ---
# Set to "false" to enable live trading (use with extreme caution)
DRY_RUN=true

# Categories to trade: comma-separated (weather, economic)
TRADE_CATEGORIES=weather,economic

# --- Risk Management ---
MAX_DAILY_LOSS=50.00
MAX_POSITION_SIZE=100
MAX_TRADE_COST=25.00
MAX_PORTFOLIO_EXPOSURE_PCT=20.0
KELLY_FRACTION=0.5

# --- Strategy Parameters ---
# Minimum expected value to trigger a trade (as decimal, e.g., 0.05 = 5%)
MIN_EXPECTED_VALUE=0.05
# Minimum confidence level to trade (0.0 - 1.0)
MIN_CONFIDENCE=0.55
# Minimum volume for a market to be considered
MIN_MARKET_VOLUME=50
# Maximum hours until market close to consider
MAX_HOURS_TO_CLOSE=48

# --- Weather-Specific ---
# Cities to trade (comma-separated): nyc, chicago, miami, austin
WEATHER_CITIES=nyc,chicago,miami,austin
# Weather series tickers
WEATHER_SERIES_TICKERS=KXHIGHNY,KXHIGHCHI,KXHIGHMIA,KXHIGHAUS

# --- Economic-Specific ---
# Economic series to watch
ECONOMIC_SERIES_TICKERS=KXCPI,KXJOBS,KXFED,KXGDP,KXSP500

# --- Scheduling ---
# Scan interval in seconds
SCAN_INTERVAL=60
# Trading hours (24h format, UTC)
TRADING_START_HOUR=10
TRADING_END_HOUR=23

# --- Logging ---
LOG_LEVEL=INFO
LOG_FILE=./logs/trading_bot.log
