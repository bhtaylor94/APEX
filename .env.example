# ============================================================
# APEX Trading Bot — Environment Variables
# ============================================================
# Set these in Vercel Dashboard → Settings → Environment Variables
# NEVER commit the .env file with real values!
# ============================================================

# --- Kalshi API Credentials ---
# Your API Key ID from Kalshi
KALSHI_API_KEY=your-api-key-id-here

# Your RSA Private Key — paste the FULL PEM content
# (including -----BEGIN RSA PRIVATE KEY----- and -----END RSA PRIVATE KEY-----)
KALSHI_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END RSA PRIVATE KEY-----"

# Environment: "demo" or "prod"  (ALWAYS start with demo!)
KALSHI_ENV=demo

# --- Trading Controls ---
# Set to "false" to enable live trading (use with extreme caution)
DRY_RUN=true

# Categories to trade (comma-separated)
TRADE_CATEGORIES=weather,economic

# Max daily loss in dollars
MAX_DAILY_LOSS=50

# Kelly Criterion fraction (0.5 = half-Kelly, safer)
KELLY_FRACTION=0.5
